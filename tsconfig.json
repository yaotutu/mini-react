{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "shared/*": [
        "packages/shared/src/*"
      ]
    },
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "packages/**/*"
  ]
}